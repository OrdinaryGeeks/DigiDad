<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blackcamou1"
    
    >
    <TextView
        android:text="DDAT-APP!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="60px"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="70px"
        android:id="@+id/loginTitle1" />
    <TextView
        android:text="Digi-Dad Advice Anytime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="32px"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/textView1" />
   

        <EditText
            android:background="@drawable/textviewbackground"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="200px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:id="@+id/editText1" />
        <EditText
           
      
            android:background="@drawable/textviewbackground"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:id="@+id/editText2" />
    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="35px"
        android:id="@+id/linearLayout1" 
         android:layout_marginLeft="40px"
        android:layout_marginTop="20px">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

        
        <CheckBox
          android:layout_marginTop="2px"
            android:text="CheckBox"
            android:layout_width="30px"
            android:background="@drawable/textviewbackground"
            android:layout_height="30px"
            android:id="@+id/checkBox1"
            />
        <TextView
            android:textAlignment="center"
            android:text="Remember Me"
            android:textSize="30px"
            
            android:layout_marginLeft="15px"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:id="@+id/textView2" />

        </LinearLayout>
        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:id="@+id/linearLayout3" >
            <TextView
                android:text="Forgot Password?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:textSize="30px"
                android:textColor="@android:color/white"
                android:layout_height="match_parent"
                android:id="@+id/textView3" />

        </LinearLayout>

</android.support.constraint.ConstraintLayout>


    <Button
       
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:text="Sign In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/signIn" />
    <TextView
        android:text="---- Sign in using ----"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textAlignment="center"
        
       android:textColor="@android:color/darker_gray"
        android:id="@+id/textView4" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4" >
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
             android:layout_height="match_parent"
           android:layout_marginLeft="40px"
            android:text="Button"
            android:layout_marginRight="5px"
            android:id="@+id/button2" />
        <Button
         android:layout_marginLeft="5px"
            android:layout_marginRight="40px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Button"
            android:id="@+id/button3" />




        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5">


        <TextView
            android:textAlignment="center"
            android:layout_marginTop="25px"
            android:textColor="@android:color/white"
            android:text="Don't have an account? "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView5" />
       
       
        <TextView 
            android:textAlignment="center"
            android:layout_marginTop="25px"
            android:textColor="@android:color/white"
            android:text="Sign Up "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView6" />
       
        </LinearLayout>

  







</LinearLayout>
